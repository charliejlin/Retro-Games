<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple">


    <TextView
        android:id="@+id/blackJackConfigScreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/press_start_2p"
        android:text="@string/blackjack"
        android:textColor="@color/white"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bj_prev_button"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="44dp"
        android:fontFamily="@font/pressstart_2p"
        android:paddingTop="15sp"
        android:text="@string/home"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:backgroundTint="@color/red"
        app:cornerRadius="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="358dp"
        android:layout_height="116dp"
        android:layout_marginTop="28dp"
        android:orientation="horizontal"
        android:checkedButton="@id/foxButton"
        app:layout_constraintBottom_toTopOf="@+id/bj_continue_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:layout_constraintVertical_bias="0.291">

        <RadioButton
            android:id="@+id/foxButton"
            android:layout_width="92dp"
            android:layout_height="107dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/fox"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.122"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="400dp" />

        <RadioButton
            android:id="@+id/pandaButton"
            android:layout_width="91dp"
            android:layout_height="117dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/panda"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="392dp" />

        <RadioButton
            android:id="@+id/turtleButton"
            android:layout_width="96dp"
            android:layout_height="106dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/turtle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.898"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="404dp" />
    </RadioGroup>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="352dp"
        android:fontFamily="@font/press_start_2p"
        android:text="@string/choose_a_character"
        android:textColor="@color/white"
        android:textSize="21sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/player_name"
        android:layout_width="326dp"
        android:layout_height="130dp"
        android:layout_marginTop="172dp"
        android:autofillHints="player name"
        android:background="@color/white"
        android:ems="10"
        android:fontFamily="@font/press_start_2p"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        android:hint="@string/player_name"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.482"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bj_continue_button"
        android:layout_width="320dp"
        android:layout_height="62dp"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="120dp"
        android:fontFamily="@font/pressstart_2p"
        android:paddingTop="15sp"
        android:text="@string/continue_to_game"
        android:textSize="16sp"
        app:backgroundTint="@color/red"
        app:cornerRadius="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>