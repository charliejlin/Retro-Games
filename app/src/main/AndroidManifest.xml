<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyApplication"
        tools:targetApi="31">
        <activity
            android:name=".TicTacToeGame"
            android:exported="false" />
        <activity
            android:name=".TicTacToeInitialScreen"
            android:exported="false" />
        <activity
            android:name=".TicTacToeStartScreen"
            android:exported="false" />
        <activity
            android:name=".BlackJackGame"
            android:exported="false" />
        <activity
            android:name=".BlackJackInitialScreen"
            android:exported="false" />
        <activity
            android:name=".WordleStartScreen"
            android:exported="false"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".WordleGame"
            android:exported="false"
            android:parentActivityName=".WordleInitialScreen" />
        <activity
            android:name=".WordleInitialScreen"
            android:exported="false"
            android:parentActivityName=".WordleStartScreen" />
        <activity
            android:name=".BlackJackStartScreen"
            android:exported="false"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".GameOverScreen"
            android:exported="false"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
