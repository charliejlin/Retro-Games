<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/black">

    <Button
        android:id="@+id/blackJackStartScreen"
        android:layout_width="320dp"
        android:layout_height="48dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="208dp"
        android:fontFamily="@font/pressstart_2p"
        android:text="@string/blackjack"
        app:backgroundTint="@color/purple"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_editor_absoluteX="50dp" />

    <Button
        android:id="@+id/checkersStartScreen"
        android:layout_width="318dp"
        android:layout_height="51dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="424dp"
        android:fontFamily="@font/pressstart_2p"
        android:text="@string/tic_tac_toe"
        android:textColor="@color/purple"
        app:backgroundTint="@color/yellow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/wordleStartScreen2"
        android:layout_width="332dp"
        android:layout_height="51dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="632dp"
        android:fontFamily="@font/pressstart_2p"
        android:text="@string/wordle"
        app:backgroundTint="@color/red"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="140dp"
        android:layout_height="239dp"
        android:layout_marginStart="125dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cards" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="123dp"
        android:layout_height="195dp"
        android:layout_marginStart="144dp"
        android:layout_marginTop="460dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/abcd" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="135dp"
        android:layout_height="133dp"
        android:layout_marginStart="133dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="120dp"
        android:layout_marginBottom="14dp"
        app:layout_constraintBottom_toTopOf="@+id/checkersStartScreen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/blackJackStartScreen"
        app:srcCompat="@drawable/tictactoe" />

</androidx.constraintlayout.widget.ConstraintLayout>