<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TicTacToeInitialScreen"
    android:background="@color/purple">

    <Button
        android:id="@+id/t_prev_button"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/pressstart_2p"
        android:paddingTop="15sp"
        android:text="@string/home"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:backgroundTint="@color/red"
        app:cornerRadius="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/t_continue_button"
        android:layout_width="320dp"
        android:layout_height="62dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="96dp"
        android:fontFamily="@font/pressstart_2p"
        android:paddingTop="15sp"
        android:text="@string/continue_to_game"
        android:textSize="16sp"
        app:backgroundTint="@color/red"
        app:cornerRadius="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <EditText
        android:id="@+id/player_name"
        android:layout_width="326dp"
        android:layout_height="130dp"
        android:layout_marginTop="172dp"
        android:background="@color/white"
        android:ems="10"
        android:fontFamily="@font/pressstart_2p"
        android:inputType="text"
        android:hint="@string/player_name"
        android:textAlignment="center"
        android:textColor="#190101"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.529"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/characterselecttext"
        android:layout_width="374dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="352dp"
        android:ems="10"
        android:fontFamily="@font/pressstart_2p"
        android:inputType="text"
        android:text="@string/choose_a_character"
        android:textAlignment="center"
        android:textColor="#F4F2F2"
        android:textSize="21sp"
        android:focusable="false"
        app:layout_constraintBottom_toTopOf="@+id/radioGroup2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.128" />

    <RadioGroup
        android:id="@+id/radioGroup2"
        android:layout_width="355dp"
        android:layout_height="122dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="31dp"
        android:orientation="horizontal"
        android:checkedButton="@id/foxButton"
        app:layout_constraintBottom_toTopOf="@+id/t_continue_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/characterselecttext">

        <RadioButton
            android:id="@+id/foxButton"
            android:layout_width="92dp"
            android:layout_height="107dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/fox"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.122"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="400dp" />


        <RadioButton
            android:id="@+id/pandaButton"
            android:layout_width="91dp"
            android:layout_height="117dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/panda"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="392dp" />

        <RadioButton
            android:id="@+id/turtleButton"
            android:layout_width="96dp"
            android:layout_height="106dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/turtle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.898"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="404dp" />
    </RadioGroup>

    <TextView
        android:id="@+id/ticTacToeHeading"
        android:layout_width="374dp"
        android:layout_height="49dp"
        android:layout_marginTop="68dp"
        android:ems="10"
        android:fontFamily="@font/pressstart_2p"
        android:inputType="text"
        android:text="@string/tic_tac_toe"
        android:textAlignment="center"
        android:textColor="#FFEB3B"
        android:textSize="34sp"
        android:focusable="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>